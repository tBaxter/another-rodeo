{% set currentUrl = page.url %}

<nav class="tdbc-sitenav">
  <div class="tdbc-sitenav__container">
    <a id="tdbc-siteid" href="/"
    {% if currentUrl === '/' %}aria-current="page"{% endif %}
    >{{ meta.siteName }}</a>

    {% set navPages = collections.all | eleventyNavigation %}
    <ul role="list" class="tdbc-sitenav__navlist tdbc-list-unstyled">
      {% for item in navPages %}
      <li>
        <a
          {% if currentUrl == item.url %}aria-current="page"{% endif %}
          href="{{ item.url }}">
            {{ item.title }}
        </a>
      </li>
      {%- endfor %}

    </ul>
</nav>
